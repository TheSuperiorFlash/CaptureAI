{
    "manifest_version": 3,
    "name": "CaptureAI",
    "version": "1.0",
    "description": "AI-powered screenshot analysis tool",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "libs/html2canvas.min.js",
            "content.js"
        ]
    }],
    "web_accessible_resources": [{
        "resources": ["icons/icon128.png", "icons/camera.png"],
        "matches": ["<all_urls>"]
    }]
}
