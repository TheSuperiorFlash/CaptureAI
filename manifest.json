{
    "manifest_version": 3,
    "name": "CaptureAI",
    "short_name": "CaptureAI",
    "version": "1.1.0",
    "author": "Grayson Kramer",
    "description": "AI-powered question capture tool",
    "homepage_url": "https://github.com/TheSuperiorFlash/CaptureAI",
    "offline_enabled": false,
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self';"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    },
    "commands": {
        "capture_shortcut": {
            "description": "Start capture",
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            }
        },
        "quick_capture_shortcut": {
            "description": "Quick capture (repeat last area)",
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            }
        },
        "toggle_ui_shortcut": {
            "description": "Toggle UI panel",
            "suggested_key": {
                "default": "Ctrl+Shift+E"
            }
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [ "inject.js" ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": ["<all_urls>"],
            "js": [ "content.js" ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [{
        "resources": [
            "icons/icon128.png",
            "icons/camera.png",
            "icons/attach.png",
            "icons/attached.png",
            "inject.js",
            "modules/config.js",
            "modules/storage.js",
            "modules/domains.js",
            "modules/utils.js",
            "modules/image-processing.js",
            "modules/ui-stealthy-result.js",
            "modules/ui-core.js",
            "modules/ui-components.js",
            "modules/capture-system.js",
            "modules/auto-solve.js",
            "modules/messaging.js",
            "modules/keyboard.js",
            "modules/event-manager.js",
            "modules/privacy-guard.js",
            "modules/auth-service.js",
            "modules/migration.js",
            "payment-success.html",
            "payment-success.js"
        ],
        "matches": ["<all_urls>"]
    }]
}
